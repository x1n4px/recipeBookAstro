---
import { turso } from '../turso'

const { rows } = await turso.execute('SELECT * FROM TYPE')
---

<h1 class="text-center m-10">Seleccione el tipo de recetas</h1>
<div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4">
  {rows.map((post) => (
    <div class="card p-4 bg-white rounded-lg cursor-pointer hover:shadow-lg transition duration-300 text-center">
     
      <a href={`/type/${post.name}`}>
        <img src=`${post.repImage}` alt=""> {post.name} </a>
    </div>
  ))}
</div>
